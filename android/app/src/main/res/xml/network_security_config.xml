<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow cleartext traffic for development domains -->
        <domain includeSubdomains="true">dev-dao.aiptgroup.site</domain>
        <domain includeSubdomains="true">14.224.137.80</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    
    <!-- For production, you should remove cleartextTrafficPermitted="true" -->
    <!-- and only allow HTTPS connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust the system CAs -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
